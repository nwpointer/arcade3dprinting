{% layout settings.customer_layout %}
<div class="sixteen columns">
	<div class="eight columns" id="create-account">
		<div>
			<h3 class="accounts-title border bottom">Activate Account</h3>
			<p>Create your password to activate your account</p>
			{% form 'activate_customer_password' %}
			    {{ form.errors | default_errors }}
			    <div id="password" class="clearfix large_form">
			      <label class="large" for="password">Password</label>
			      <input type="password" value="" name="customer[password]" id="customer_password" class="field" size="16" />
			    </div>
			    <div id="password_confirm" class="clearfix large_form">
			      <label class="large" for="password_confirmation">Password Confirmation</label>
			      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="field" size="16" />
			    </div>
			    <div class="action_bottom">
			      <input type="submit" class="button primary" value="Activate Account" />
			      <span class="note">or</span>
			      <input type="submit" class=" button cancel" name="decline" id="customer_decline" value="Decline Invitation" />
			    </div>
			  {% endform %}
			</div>
	</div>
</div>